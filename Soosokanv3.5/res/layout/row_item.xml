<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <ImageView
        android:id="@+id/itempic"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/desc"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    

    <TextView
        android:id="@+id/row_itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/itempic"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/itempic"
        android:text="Item name:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/row_ItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/itempic"
        android:layout_alignParentTop="true"
         android:text="Item name"
        android:layout_toRightOf="@+id/row_itemname"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        
     

    <TextView
        android:id="@+id/row_itemprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itempic"
        android:layout_alignLeft="@+id/row_itemname"
        android:text="Item price:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/row_ItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/row_itemprice"
        android:layout_alignBottom="@+id/row_itemprice"
        android:layout_toRightOf="@+id/row_itemprice"
        android:text="Item Price"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        

</RelativeLayout>
    
